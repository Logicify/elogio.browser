{
    "manifest_version": 2,
    "name": "Elogio plugin",
    "version": "1.0",
    "minimum_chrome_version": "23",
    "permissions": ["tabs", "*://*/*", "webRequest"],
    "content_scripts": [
        {
            "js": ["data/js/common-lib.js", "data/js/content-script.js" ],
            "matches": [ "*://*/*", "https://*/*"],
            "css": ["styles/highlight.css", "styles/panel.css"]
        }
    ],
    "icons": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "background": {
        "scripts": ["main/common-chrome-lib.js", "main/main.js"],
        "run_at": "document_end"
    }
}